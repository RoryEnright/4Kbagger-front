<div class="container">
  <form {{action "createHike" on="submit"}}>
    <h2>Log a hike</h2>

    <div class="form-group">
      <label for='when'>Date</label>
      {{input value=when type=date placeholder='0000-00-00' id='when' class="form-control"}}
   </div>

   <div class="form-group">
     <label for='trail'>Trails</label>
     {{input value=trail type='string' placeholder="trails used" id='trails' class="form-control"}}
  </div>

    <div class="form-group">
      <label for='duration'>Duration of Hike (in hours)</label>
      {{input value=duration type='number' placeholder='4' id='duration' class="form-control"}}
   </div>

   <div class="form-group">
     <label for='note'>Notes</label>
     {{input value=note type='text' placeholder='Weather, Trail Conditions, Views, Etc' id='notes' class="form-control"}}
  </div>

  <button class="btn btn-primary">
  Submit
</button>
</form>
</div>
